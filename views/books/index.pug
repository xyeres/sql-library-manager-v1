extends ../layout

block content
    h1= title
    p
        a.button(href='/books/new') Create New Book
    table
        thead
            tr
            th Title
            th Author
            th Genre
            th Year
        tbody
            each book in books
                - var bookID = book.id;
                tr
                    td
                        a(href=`books/${bookID}`) #{book.title}
                    td= book.author
                    td= book.genre
                    td= book.year